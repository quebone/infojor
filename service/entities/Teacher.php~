<?php
namespace Infojor\Service\Entities;

/**
 * @Entity @Table(name="teachers")
 **/
class Teacher extends Person
{
	/** @Column(type="string", length=40) **/
	private $email;
	/** @Column(type="string", length=13, nullable=true) **/
	private $phone;
	/** @Column(type="string", length=20) **/
	private $username;
	/** @Column(type="string", length=40) **/
	private $password;
	
	private $tutorings;
	private $specialities;
	private $reinforcings;

	/**
	 * @ManyToMany(targetEntity="Role", inversedBy="teachers")
	 * @JoinTable(name="hasroles",
	 			inverseJoinColumns={@JoinColumn(name="role_type", referencedColumnName="type")}
	 		)
	 */
	private $roles;

	public function __construct() {
		$this->classrooms = new \Doctrine\Common\Collections\ArrayCollection();
		$this->areas = new \Doctrine\Common\Collections\ArrayCollection();
		$this->reinforceClassrooms = new \Doctrine\Common\Collections\ArrayCollection();
		$this->roles = new \Doctrine\Common\Collections\ArrayCollection();
	}

	public function getEmail() {
		return $this->email;
	}
	
	public function setEmail($email) {
		$this->email = $email;
	}
	
	public function getPhone() {
		return $this->phone;
	}
	
	public function setPhone($phone) {
		$this->phone = $phone;
	}
	
	public function getUsername() {
		return $this->username;
	}
	
	public function setUsername($username) {
		$this->username = $username;
	}
	
	public function getPassword() {
		return $this->password;
	}
	
	public function setPassword($password) {
		$this->password = $password;
	}
	
	public function getCompleteName() {
		return $this->name . $this->surnames;
	}
	
	public function getTutorings(\Doctrine\ORM\EntityManager $em, $course, $trimestre) {
		$this->tutorings = $em->getRepository('Infojor\\Service\\Entities\\Tutoring')->findBy(array(
				'teacher'=>$this->id,
				'course'=>$course,
				'trimestre'=>$trimestre,
			));
		return $this->tutorings;
	}
	
	public function getSpecialities(\Doctrine\ORM\EntityManager $em, $course, $trimestre) {
		$this->specialities = $em->getRepository('Infojor\\Service\\Entities\\Speciality')->findBy(array(
				'teacher'=>$this->id,
				'course'=>$course,
				'trimestre'=>$trimestre,
			));
		return $this->specialities;
	}
	
	public function getReinforcings(\Doctrine\ORM\EntityManager $em, $course, $trimestre) {
		$this->reinforcings = $em->getRepository('Infojor\\Service\\Entities\\Reinforcing')->findBy(array(
				'teacher'=>$this->id,
				'course'=>$course,
				'trimestre'=>$trimestre,
			));
		return $this->reinforcings;
	}
	
	public function isAdmin() {
		foreach ($this->roles as $role) {
			if ($role->getType() == Role::ADMIN) {
				return true;
			}
		}
		return false;
	}
}
