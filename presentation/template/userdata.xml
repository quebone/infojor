<html lang="ca">
<head>
	<meta charset="utf-8" />
	<title>Titol</title>
	<meta name="author" content="carles" />
	<link rel="stylesheet" href="presentation/css/styles.css?v=1.0" />
	<link rel="stylesheet" href="presentation/css/compact-nav.css?v=1.0" />
	<link rel="stylesheet" href="presentation/css/userdata.css?v=1.0" />
</head>
<body>
<div id='header-wrap'>
<header></header>
</div>
<main>
	<input id='userId' type='hidden' />
	<form id="login-form" method="POST">
		<div class="form-element"><span class="form-label">Nom</span><input id="name" type="text" class="form-input" required/></div>
		<div class="form-element"><span class="form-label">Cognoms</span><input id="surnames" type="text" class="form-input" required/></div>
		<div class="form-element"><span class="form-label">Correu electrònic</span><input id="email" type="email" class="form-input" required/></div>
		<div class="form-element"><span class="form-label">Telèfon</span><input id="phone" type="text" class="form-input"/></div>
		<div class="form-element"><span class="form-label">Nom d'usuari</span><input id="username" type="text" class="form-input" required/></div>
		<div class="form-element"><span class="form-label">Contrasenya</span><input id="password" type="password" class="form-input" required/></div>
		<div class="form-element"><span class="form-label">Repetir contrasenya</span><input id="password-repeat" type="password" class="form-input" required/></div>
		<div class="form-buttons">
			<button type="button" class="form-button" onclick="sendUserData()">Acceptar</button>
			<button type="button" class="form-button" onclick="cancel()">Cancel·lar</button>
		</div>
	</form>
	<div id="error" class="error"></div>
</main>
  <script src="js/scripts.js" />
  <script src="js/compact-nav.js"></script>
  <script src="js/userdata.js" />
  <script src="js/crypto.js" />
</body>
</html>
