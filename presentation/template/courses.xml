	#header#

	<main>
		<form method="POST">
		<table>
			<tr><th>Curs</th><th>Actiu</th><th>Eliminar</th></tr>
			<tr class="courses"><td><input type="text" class="form-input" value="2016-2017"/></td><td><input class="active-course" type="radio" name="active"></td><td><a class="delete">x</a></td></tr>
